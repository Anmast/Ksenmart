<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fieldset name="details"
		addfieldpath="/plugins/system/ksencore/core/models/fields"
	>
	
		<field name="id" type="hidden" class="id" />
		
		<field 
			name="metatitle"
			type="text"
			default=""
			label="KS_METATITLE_LBL"
			description="KS_METATITLE_DESC"
			class="inputbox"
			labelclass="inputname"
		/>
		
		<field 
			name="metadescription"
			type="textarea"
			default=""
			label="KS_METADESCRIPTION_LBL"
			description="KS_METADESCRIPTION_DESC"
			class="textarea"
		/>
		
		<field 
			name="metakeywords"
			type="textarea"
			label="KS_METAKEYWORDS_LBL"
			description="KS_METAKEYWORDS_DESC"
			default=""
			class="textarea"
		/>
		
		<field 
			name="text"
			type="editor"
			label="KS_SEO_SEOTEXT_TEXT_LBL"
			description="KS_SEO_SEOTEXT_TEXT_DESC"
			filter="JComponentHelper::filterText"
			default=""
			height="250px"
		/>		
		
		<field 
			name="categories"
			type="ksmcategories"
			label="KS_SEO_SEOTEXT_CATEGORIES_LBL"
			onclick="setActive(this);"
			class="active"
			wrap="slidemodule"
		/>		

		<field 
			name="manufacturers"
			type="manufacturers"
			label="KS_SEO_SEOTEXT_MANUFACTURERS_LBL"
			onclick="setActive(this);"
			wrap="slidemodule"
		/>	

		<field 
			name="countries"
			type="countries"
			label="KS_SEO_SEOTEXT_COUNTRIES_LBL"
			onclick="setActive(this);"
			wrap="slidemodule"
		/>	

		<field 
			name="property_values" 
			type="propertiesvalues" 
			label="KS_SEO_SEOTEXT_PROPERTIES_LBL"
			onclick="setActive(this);"
			wrap="slidemodule"		
		/>		
		
	</fieldset>
</form>